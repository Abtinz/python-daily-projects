codinglangauge=["python","C","html","java"]
pythonlist = ["calculates","variables","boolean","strings","dictionary","tupples AND sets","list","conditions","for and while loop","functions"]
javalist =["class","Constractor","field","getter","condition","loop(while,for,for each)","arraylist","itrator"]
Clist=["calculates","variables","conditions","for and while loop","array","strings","functions","pointer","strucrture","file"]   
htmllist=["tag and head","p and pre","formating","cuotation","link","image","lists and tables","format","inform","color"] 

def welcom_func() :
    print("welcom to coding list ")
    print("subjects :")
    index=1
    for i in codinglangauge :
        print(str(index) + ") "+str(i))
        index-=-1    
    print("Else : Exit")
    choice =int(input())
    if choice == 1 :
       pythonfunc()
    elif choice == 2 :
        Cfunc()
    elif choice == 3 :
         htmlfunc()
    elif choice == 4 :
        javafunc()
    else  : print("good bye ^ _ ^")
        
       
def pythonfunc() :
    index=1
    for i in pythonlist :
        print(str(index) + ") "+str(i))
        index-=-1 
    print("\n"+"1) add item")
    print("2) remove item")
    print("Else : EXIT")
    choice =int(input())
    if choice == 1 :
        pythonadd()
    elif choice == 2 :
        pythonremove()
    else :
        welcom_func()

def pythonadd() :
    print("please enter your new subject :")
    subject = input()
    pythonlist.append(subject)
    print("your new numbar has been appended successfully :")
    pythonfunc()

def pythonremove() :
    index=1
    for i in pythonlist :
        print(str(index) + ") "+str(i))
        index-=-1 
    print("which one do you want to remove?")
    choice =int(input())
    choice-=1
    if choice>=len(pythonlist) or choice <0 :
        print("its wrong !")
        pythonremove()
    else :
        pythonlist.pop(choice)   
        print("your selected subject has been removed successfully :") 
        pythonfunc()
    
